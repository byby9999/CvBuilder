@model CvBuilder.Models.OtherInfo


<div>
    <h4>References and other info</h4><hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @{var skill = @Model.Items[0]; }

    <div class="row">
        <div class="form-group col-lg-12">
            @Html.LabelFor(model => skill, "Description", null)
            @Html.TextAreaFor(model => Model.Items[0], new { @class = "form-control" } )
        </div>
    </div>

    <div style="float:right;">
        <input type="button" style="display:inline" value="Save" class="btn btn-success save-section" />
    </div>
</div>

