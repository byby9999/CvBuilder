@model CvBuilder.Models.Certifications
@{ string hide = ""; }
<div>
    <h4>Certifications, trainings, awards</h4><hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @for (int i = 0; i < Model.Items.Count; i++)
    {
        hide = (i == 0) ? "" : "display:none";
        <div class="cert-item" style="@hide">
            <div class="row">
                <div class="form-group col-lg-6">
                    @Html.LabelFor(model => Model.Items[i].Name, "Name", null)
                    @Html.EditorFor(model => Model.Items[i].Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group col-lg-6">
                    @Html.LabelFor(model => Model.Items[i].Organization, "Organization that issued", null)
                    @Html.EditorFor(model => Model.Items[i].Organization, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    @Html.LabelFor(model => Model.Items[i].DateEarned, "Date Earned", null)
                    @Html.EditorFor(model => Model.Items[i].DateEarned, new { htmlAttributes = new { @class = "form-control datepicker", autocomplete = "off" } })
                </div>
                <div class="form-group col-lg-6">
                    @Html.LabelFor(model => Model.Items[i].ExpireDate, "Expire Date", null)
                    @Html.EditorFor(model => Model.Items[i].ExpireDate, new { htmlAttributes = new { @class = "form-control datepicker", autocomplete = "off" } })

                    @Html.CheckBoxFor(model => Model.Items[i].DoesExpire) 
                    @Html.LabelFor(model => Model.Items[i].DoesExpire, "Has no expiration date")
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-12">
                    @Html.LabelFor(model => Model.Items[i].CredentialUrl, "Credential URL", null)
                    @Html.EditorFor(model => Model.Items[i].CredentialUrl, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div style="float:right;">
                <input type="button" style="display:inline" value="Save" class="btn btn-success save-section" />
            </div>
        </div>
    }
</div>


