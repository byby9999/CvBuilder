@model CvBuilder.Models.Certifications

<div>
    <h4>Certifications or trainings earned</h4><hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @{var cert = @Model.Items[0]; }

    <div class="row">
        <div class="form-group col-lg-6">
            @Html.LabelFor(model => cert.Name, "Name", null)
            @Html.EditorFor(model => Model.Items[0].Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-lg-6">
            @Html.LabelFor(model => cert.Organization, "Organization that issued", null)
            @Html.EditorFor(model => Model.Items[0].Organization, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-6">
            @Html.LabelFor(model => cert.DateEarned, "Date Earned", null)
            @Html.EditorFor(model => Model.Items[0].DateEarned, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-lg-6">
            @Html.LabelFor(model => cert.ExpireDate, "Expire Date", null)
            @Html.EditorFor(model => Model.Items[0].ExpireDate, new { htmlAttributes = new { @class = "form-control" } })

            @Html.CheckBoxFor(model => cert.DoesExpire) @Html.LabelFor(model => cert.DoesExpire, "Has Expiration Date")
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            @Html.LabelFor(model => cert.CredentialUrl, "Credential URL", null)
            @Html.EditorFor(model => Model.Items[0].CredentialUrl, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div style="float:right;">
        <input type="button" style="display:inline" value="Save" class="btn btn-success save-section" />
    </div>
</div>


