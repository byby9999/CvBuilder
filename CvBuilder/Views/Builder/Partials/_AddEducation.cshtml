@model CvBuilder.Models.EducationHistory
@{ string hide = ""; }
<div>
    <h4>Education</h4><hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @for (int i = 0; i < Model.Items.Count; i++)
    {
        hide = (i == 0) ? "" : "display:none";
        <div class="edu-item" style="@hide">
            <div class="row">
                <div class="form-group col-lg-12">
                    @Html.LabelFor(model => Model.Items[i].SchoolName, "School Name", null)
                    @Html.EditorFor(model => Model.Items[i].SchoolName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    @Html.LabelFor(model => Model.Items[i].FieldOfStudy, "Field Of Study", null)
                    @Html.EditorFor(model => Model.Items[i].FieldOfStudy, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group col-lg-6">
                    @Html.LabelFor(model => Model.Items[i].Degree, "Degree", null)
                    @Html.EditorFor(model => Model.Items[i].Degree, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    @Html.LabelFor(model => Model.Items[i].StartDate, "Start Date", null)
                    @Html.EditorFor(model => Model.Items[i].StartDate, new { htmlAttributes = new { @class = "form-control datepicker", autocomplete = "off" } })
                </div>
                <div class="form-group col-lg-6">
                    @Html.LabelFor(model => Model.Items[i].FinishDate, "End Date", null)
                    @Html.EditorFor(model => Model.Items[i].FinishDate, new { htmlAttributes = new { @class = "form-control datepicker", autocomplete = "off" } })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-12">
                    @Html.LabelFor(model => Model.Items[i].Description, "Description", null)
                    @Html.TextAreaFor(model => Model.Items[i].Description, new { @class = "form-control" })
                </div>
            </div>
            <div style="float:right;">
                <p style="display:inline"><i><a href="#">Add new school</a></i></p>
                <p style="display:inline"> or </p>
                <input type="button" style="display:inline" value="Save" class="btn btn-success save-section" />
            </div>
        </div>
    }
</div>

