@model CvBuilder.Models.EducationHistory

<div>
    <h4>Education</h4><hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @{var eduItem = @Model.Items[0]; }

    <div class="row">
        <div class="form-group col-lg-12">
            @Html.LabelFor(model => eduItem.SchoolName, "School Name", null)
            @Html.EditorFor(model => eduItem.SchoolName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-6">
            @Html.LabelFor(model => eduItem.FieldOfStudy, "Field Of Study", null)
            @Html.EditorFor(model => eduItem.FieldOfStudy, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-lg-6">
            @Html.LabelFor(model => eduItem.Degree, "Degree", null)
            @Html.EditorFor(model => eduItem.Degree, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-6">
            @Html.LabelFor(model => eduItem.StartDate, "Start Date", null)
            @Html.EditorFor(model => eduItem.StartDate, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-lg-6">
            @Html.LabelFor(model => eduItem.FinishDate, "End Date", null)
            @Html.EditorFor(model => eduItem.FinishDate, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            @Html.LabelFor(model => eduItem.Description, "Description", null)
            @Html.TextAreaFor(model => eduItem.Description, new { @class = "form-control" })
        </div>
    </div>
    <div style="float:right;">
        <p style="display:inline"><i><a href="#">Add another school/university</a></i></p>
        <p style="display:inline"> or </p>
        <input type="button" style="display:inline" value="Save" class="btn btn-success save-section" />
    </div>
</div>

