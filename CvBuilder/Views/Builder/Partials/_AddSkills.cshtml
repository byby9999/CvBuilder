@model CvBuilder.Models.Skills

<div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @{var skill = @Model.SkillItems[0]; }

    <div class="row">
        <div class="form-group col-lg-6">
            @Html.LabelFor(model => skill.Name, "Name", null)
            @Html.EditorFor(model => Model.SkillItems[0].Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-lg-6">
            @Html.LabelFor(model => skill.Rating, "Self-rating (optional)", null)
            @Html.EditorFor(model => skill.Rating, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div style="float:right;">
        <p style="display:inline"><i><a href="#">Add another info</a></i></p>
        <p style="display:inline"> or </p>
        <input type="button" style="display:inline" value="Save" class="btn btn-success save-section" />
    </div>
</div>



